<div id="h-single" class="SegDefine">
    <div class='Segment Seg-Single row' >
        <div class='col-md-12'>
            <div class='fa fa-photo'> Single</div>
            <hr class='featurette-divider' />
            <div>
                <div class='form-group PictureLink'>
                    <input id="single-link" type='text' placeholder='Picture url' class='form-control'>
                    <input type='text' id='single-content' placeholder='Append a paragraph' class='form-control'>
                </div>
                <div id="singleType" class="btn-group" data-toggle="buttons">
                    <label id="s-bottom" class="btn btn-info active">
                        <input type="radio" autocomplete="off" checked> Bottom
                    </label>
                    <label id="s-top" class="btn btn-info">
                        <input type="radio" autocomplete="off"> Top
                    </label>
                    <label id="s-left" class="btn btn-info">
                        <input type="radio" autocomplete="off"> Left
                    </label>
                    <label id="s-right" class="btn btn-info">
                        <input type="radio" autocomplete="off"> Right
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="h-music" class="SegDefine">
    <div class='Segment Seg-Music row' >
